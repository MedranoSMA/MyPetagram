<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvContacto3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/imgFotoMiMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/corgi_48"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

                <TextView
                    android:id="@+id/tvLikesMiMascota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/likes_mascota"
                    android:textSize="@dimen/nombre_card_view"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>

                 <ImageButton
                    android:id="@+id/btnLikesMiMascota"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/bone2"/>

            </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>